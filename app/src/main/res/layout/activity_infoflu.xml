<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAEAEA"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/lly_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitee"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <VideoView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="230dp" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lly_flu"
            android:visibility="gone"
            android:padding="20dp"
            android:background="@color/whitee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아침저녁 심한 일교차로 감기 환자가 늘어나는 가운데 예방법에 관심이 쏠리고 있습니다. "
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="쫓아오는 감기를 떨구어낼 수 있는 5가지 확실한 예방법, 영상으로 살펴보시죠."
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="도움말 : 서울대병원 가정의학과 박민선 교수, 경희대한방병원 침구과 이승훈 교수"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="출처 : 연합뉴스 (Yonhapnews) 왕기웅 기자 이수정 인턴기자"
                android:textColor="#424242"
                android:textSize="11sp" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lly_poison"
            android:padding="20dp"
            android:background="@color/whitee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="식품의약품안전처"
                android:textSize="12sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4계절 내내 주의해야 하는 식중독!"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="'국민 여러분의 건강은 안녕하신가요?'"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="'손씻기' , '끊여먹기', '익혀먹기'"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lly_asthma"
            android:padding="20dp"
            android:background="@color/whitee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="질병관리청 아프지마TV"
                android:textSize="12sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="질병관리청과 함께하는 미세먼지 건강알리미 - 천식질환자대상"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="'질병관리청 아프지마TV'채널은 각종 질병관련 영상을 제공합니다."
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/lly_flu2"
            android:padding="20dp"
            android:background="@color/whitee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="감기 예방 생활습관"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/fluposter"/>
            <Button
                android:id="@+id/btn_moveflu"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="감기 정보찾기"
                android:textColor="@color/whitee"/>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/lly_poison2"
            android:padding="20dp"
            android:background="@color/whitee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="식중독 예방수칙"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/poisonposter"/>
            <Button
                android:id="@+id/btn_movepoison"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="식중독 정보찾기"
                android:textColor="@color/whitee"/>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/lly_asthma2"
            android:padding="20dp"
            android:background="@color/whitee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="천식 진단과 치료평가"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/asthmaposter"/>
            <Button
                android:id="@+id/btn_moveasthma"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="천식 정보찾기"
                android:textColor="@color/whitee"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>