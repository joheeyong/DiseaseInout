<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#EAEAEA">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

                    <LinearLayout
                        android:padding="20dp"
                        android:background="@color/whitee"
                        android:id="@+id/zxcv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="어떤 정보를 찾으시나요?"
                            android:textSize="16sp"/>

                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:id="@+id/lly_acount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_widget_background">
                            <TextView
                                android:gravity="center"
                                android:padding="10dp"
                                android:textColor="@color/gray"
                                android:textSize="15sp"
                                android:text="개요 (정의, 원인)"
                                android:id="@+id/et_sick"
                                android:layout_width="wrap_content"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@+id/tv_down"
                                app:layout_constraintStart_toEndOf="@+id/tv_down" />
                            <TextView
                                android:paddingRight="10dp"
                                android:gravity="right"
                                android:textColor="@color/gray"
                                android:id="@+id/tv_down2"
                                android:textSize="15sp"
                                android:text="▼"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@+id/et_area"
                                app:layout_constraintStart_toEndOf="@+id/et_sick" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:visibility="invisible"
                        android:background="@color/whitee"
                        android:padding="20dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/lly_infodis1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/zxcv">

                        <TextView
                            android:id="@+id/tv_infodis1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="개요" />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginTop="20dp"
                                android:gravity="top|center"
                                android:layout_gravity="center"
                                android:id="@+id/tv_infodiss1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#4C4C4C"
                                android:textSize="13sp"
                                android:layout_marginBottom="0dp"
                                tools:text="좋음" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="invisible"
                        android:id="@+id/lly_infodis2"
                        android:layout_marginTop="10dp"
                        android:padding="20dp"
                        android:background="@color/whitee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_infodis2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="행동 지침"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginTop="20dp"
                                android:gravity="top|center"
                                android:layout_gravity="center"
                                android:id="@+id/tv_infodiss2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#4C4C4C"
                                android:textSize="13sp"
                                android:layout_marginBottom="0dp"
                                tools:text="좋음" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lly_infodis3"
                        android:visibility="invisible"
                        android:background="@color/whitee"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/lly_infodis2"
                        android:padding="20dp"
                        >
                        <TextView
                            android:id="@+id/tv_infodis3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="행동 지침"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginTop="20dp"
                                android:gravity="top|center"
                                android:layout_gravity="center"
                                android:id="@+id/tv_infodiss3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#4C4C4C"
                                android:textSize="13sp"
                                android:layout_marginBottom="0dp"
                                tools:text="좋음" />

                        </LinearLayout>
                    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="200dp"
            android:id="@+id/lly_outnet"
            app:layout_constraintTop_toBottomOf="@+id/gbnj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="네트워크 연결을 확인해 주세요"
                android:textSize="16sp" />
            <TextView
                android:textColor="#4C4C4C"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연결을 확인한 후 재시도를 클릭해주세요."
                android:textSize="14sp" />
            <Button
                android:backgroundTint="#3F0099"
                android:layout_marginTop="20dp"
                android:id="@+id/btn_restart"
                android:textColor="@color/whitee"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재시도"/>

        </LinearLayout>
    </LinearLayout>




</ScrollView>
