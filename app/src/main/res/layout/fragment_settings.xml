<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lly_myone"
        android:background="@color/white"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <TextView
        android:textSize="20sp"
        android:text="       님"
        android:id="@+id/tv_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:textColor="#747474"
        android:textSize="14sp"
        android:text="비밀번호를 주기적으로 변경해주세요."
        android:id="@+id/passwordEditTextt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:textColor="@color/white"
        android:text="변경"
        android:id="@+id/btn_repass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_nickname"
        app:layout_constraintRight_toRightOf="@+id/tv_nickname"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/lly_mytwo"
        android:background="@color/white"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/lly_myone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 정보"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="15dp"
            android:id="@+id/con_one"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="이메일"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:textColor="@color/purple"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_repasds"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:textColor="#747474"
                android:id="@+id/tv_repasds"
                android:gravity="right"
                android:textSize="20sp"
                android:text=">"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_two"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="닉네임"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/tv_nickname2"
                android:gravity="right"
                android:textColor="@color/purple"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_repasdss"/>
            <TextView
                android:textColor="#747474"
                android:id="@+id/tv_repasdss"
                android:gravity="right"
                android:textSize="20sp"
                android:text=">"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_three"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="상태메시지"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_mymessage"
                android:maxWidth="230dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/purple"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_repasdsss" />
            <TextView
                android:textColor="#747474"
                android:id="@+id/tv_repasdsss"
                android:gravity="right"
                android:textSize="20sp"
                android:text=">"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:id="@+id/lly_mythree"
        android:background="@color/white"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/lly_mytwo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pannel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 보안"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="20dp"
            android:id="@+id/con_four"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/pannel">
            <TextView
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="비밀번호 변경"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:textColor="#747474"
                android:gravity="right"
                android:textSize="20sp"
                android:text=">"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv_date1"
            android:layout_gravity="center"
            android:textColor="#4C4C4C"
            android:textSize="14sp"
            android:text="가입한 날짜 :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/con_four"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:textColor="#4C4C4C"
            android:layout_marginTop="15dp"
            android:id="@+id/tv_date2"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:text="로그인한 날짜 :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_date1"
            app:layout_constraintStart_toStartOf="parent" />
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#3F0099"
            android:text="로그아웃"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tv_date2" />
        <Button
            android:id="@+id/btn_authdel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:text="회원탈퇴"
            app:layout_constraintTop_toBottomOf="@+id/btn_logout"
            app:layout_constraintEnd_toStartOf="@+id/btn_logout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:id="@+id/lly_outnet"
        app:layout_constraintTop_toBottomOf="@+id/lly_mythree"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네트워크 연결을 확인해 주세요"
            android:textSize="16sp" />
        <TextView
            android:textColor="#4C4C4C"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연결을 확인한 후 재시도를 클릭해주세요."
            android:textSize="14sp" />
        <Button
            android:backgroundTint="#3F0099"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_restart"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재시도"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>